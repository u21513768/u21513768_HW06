@model HW6.Models.Report
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
@{
    ViewBag.Title = "Index";
}

<h2>Mountain Bike Order Report</h2>
<hr />
<canvas id="myChart" style="width:100%;"></canvas>

<script>
    var data = @Html.Raw(Json.Encode(Model));
    var months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
    var total = [];
    console.log(data);

    for (var i = 0; i < data.Totals.length; i++) {
        total[i] = data.Totals[i];
    }

    const ctx = document.getElementById('myChart').getContext('2d');
    const config = {
        type: 'bar',
        data: {
            labels: months,
            datasets: [{
                label: 'Number of Mountain Bikes Sold',
                data: total,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(153, 102, 255, 1)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            
            plugins: {
                title: {
                display: true,
                    text: 'Bar Chart'
                }
            }
        },
    };
 
    config.options.plugins.legend = false;
    const myChart = new Chart(ctx, config);

    console.log(config);

